{
  "manifest_version": 3,
  "name": "LinguaFlix",
  "version": "1.0.0",
  "description": "Learn languages on Netflix - pause to see additional subtitles in your chosen language",
  "author": "Marcin SÅ‚owikowski",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "https://www.netflix.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["settings-injector.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    },
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["modules/*.js"],
      "matches": ["https://www.netflix.com/*"]
    }
  ],
  
  "action": {
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    },
    "default_title": "LinguaFlix",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },

  "options_page": "options.html"
}
